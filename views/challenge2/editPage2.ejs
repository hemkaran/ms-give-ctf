<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit and Save</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1 {
            color: #4CAF50;
        }
        .container {
            max-width: 500px;
            margin: 0 auto;
        }
        textarea {
            width: 100%;
            height: 100px;
            font-size: 16px;
            margin-bottom: 10px;
        }
        button:disabled {
            background-color: #ddd;
            cursor: not-allowed;
        }
        button {
            padding: 10px 15px;
            font-size: 16px;
            color: white;
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit Content</h1>
        <p>Edit the content below:</p>
        <textarea id="editAreaTitle" placeholder="Type here..." value="Facts"></textarea>
        <textarea id="editArea" placeholder="Type here..." value="abc"></textarea>
        <button id="saveButton" disabled>Save</button>
    </div>

    <script>
        const editArea = document.getElementById('editArea');
        const saveButton = document.getElementById('saveButton');

        // Enable the "Save" button when there's text in the edit area
        editArea.addEventListener('input', () => {
            saveButton.disabled = editArea.value.trim() === '';
        });
    </script>
</body>
</html>
