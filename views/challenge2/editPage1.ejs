<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            color: #333;
        }
        h1 {
            color: #4CAF50;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
        }
        .input-group {
            margin-bottom: 15px;
        }
        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }
        input, textarea {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
        textarea {
            height: 120px;
            resize: vertical;
        }
        button:disabled {
            background-color: #ddd;
            cursor: not-allowed;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit Page</h1>
        <div class="input-group">
            <label for="title">Title:</label>
            <input type="text" id="title" 
                value="History of Lorem Ipsum" 
                placeholder="Enter title here...">
        </div>
        <div class="input-group">
            <label for="content">Content:</label>
            <textarea id="content"      
            value="Lorem Ipsum originated from a work by the Roman philosopher Cicero in 45 BCE, titled "De Finibus Bonorum et Malorum." It was altered and popularized as placeholder text in the 1960s for design and typesetting."
            placeholder="Enter content here..."></textarea>
        </div>
        <button id="saveButton" disabled>Save</button>
    </div>

    <script>
        const titleInput = document.getElementById('title');
        const contentInput = document.getElementById('content');
        const saveButton = document.getElementById('saveButton');
    </script>
</body>
</html>
